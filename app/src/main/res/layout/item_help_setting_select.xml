<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_item_help_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/margin_padding_default">

    <Switch
        android:id="@+id/switch_help_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/title_help_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/switch_help_setting"
        android:layout_toStartOf="@id/switch_help_setting"
        android:text="Halo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/desc_help_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title_help_setting"
        android:layout_toLeftOf="@id/switch_help_setting"
        android:layout_toStartOf="@id/switch_help_setting"
        android:text="Yuhuu"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"/>

</RelativeLayout>